{% extends '_base' %}

{% block title %}Détails : {{ burger.nom }}{% endblock title %}

{% block body_background %}background-green_light{% endblock body_background %}
{% block body %}
    <div class="container-center grid-burger background-green">
        <img class="el bur_drk-img" src="/public/image/get/burgers/{{ burger.image }}/svg" alt="burger's image">
        <div class="el bur_drk-name">{{ burger.nom }}</div>
        <div class="el bur_drk-desc">{{ burger.description }}</div>
        <div class="el bur_drk-prix">Prix : {{ burger.prix }} €</div>
        <div class="el bur_drk-cal">Cal. : {{ calories }} KCal</div>
        <div class="el bur-recette">{{ burger.recette }}</div>
    </div>
    <a href="/informations-produits/burgers"><div class="btn-medium normal bottom-left background-orange green_dark">Retour</div></a>
    <a href="/"><div class="btn-medium normal bottom-right background-orange green_dark">Menu Principal</div></a>
{% endblock body %}
